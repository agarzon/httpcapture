{
    "name": "httpcapture/httpcapture",
    "description": "Capture inbound HTTP requests for debugging webhooks and APIs.",
    "type": "project",
    "require": {
        "php": "^8.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "squizlabs/php_codesniffer": "^3.9"
    },
    "autoload": {
        "psr-4": {
            "HttpCapture\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HttpCapture\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "lint": "phpcs"
    }
}
